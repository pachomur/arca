<!DOCTYPE html>
<html lang="en">

    <%= yield :css_application %>
    <%= render 'head'%>

    <body id="page-top" class="index">

            <!-- Page Content -->

            <%- if params[:controller] == 'welcome' -%>
                <%= render 'application/banner' -%>

                <header>
                  <div class="container">
                    <div class="intro-text">
                      <div class="intro-heading-proyecto">Proyecto</div>
                      <div class="intro-heading">ARCA<sup style="font-size: 42%;vertical-align: super">&reg</sup> </div>
                      <div class="intro-lead-in">- Cultura visual de las am√©ricas coloniales -</div>
                      <a href="#services" class="page-scroll btn btn-xl">Archivos Visuales</a>
                    </div>
                  </div>
                </header>


                <section class="contenido">
                    <div class="container">
                      <%= bootstrap_flash %>
                      <%= yield %>
                    </div>
                </section>
            <%- else -%>
                <div id="wrapper">
                    <%= render 'application/bannerShrink' %>
                    <div class="page-wrapper">
                        <section class="contenido">
                            <div class="container">
                              <%= bootstrap_flash %>
                              <%= yield %>
                            </div>
                        </section>
                    </div>
                </div>
            <%- end -%>

    </body>

    <%= yield :js_application %>
    <%= render 'footer' %>
</html>