<!DOCTYPE html>
<html lang="en">
    <!--<p class="notice"> </p>
    <p class="alert"> </p>-->
    <%= yield :css_application %>
    <%= render 'head'%>

    <body id="page-top" class="index">

            <!-- Page Content -->

            <%- if params[:controller] == 'welcome' -%>
                <%= render 'application/banner' -%>

                <header>
                    <!-- Jssor Slider Begin -->
                    <!-- You can move inline styles to css file or css block. -->
                  <div class="container">
                    <div id="slider1_container" style="position: relative; margin: 0 auto; top: 0px; left: 0px; width: 1300px; height: 710px; overflow: hidden;">

                      <!-- Loading Screen -->
                      <div u="loading" style="position: absolute; top: 0px; left: 0px;">
                        <div style="filter: alpha(opacity=70); opacity: 0.7; position: absolute; display: block;
                                top: 0px; left: 0px; width: 100%; height: 100%;">
                        </div>
                        <div style="position: absolute; display: block; background: url(<%= image_url '1.jpg' %>) no-repeat center center;
                                top: 0px; left: 0px; width: 100%; height: 100%;">
                        </div>
                      </div>
                    <div u="slides" style="cursor: move; position: absolute; left: 0px; top: 0px; width: 1300px; height: 710px; overflow: hidden;">
                        <div>
                          <img u="image" src="<%= image_url 'welcome/portada.jpg' %>" />
                        </div>
                        <div><img u="image" src="<%= image_url 'welcome/portada2.jpg' %>" />
                        </div>
                        <div><img u="image" src="<%= image_url 'welcome/portada.jpg' %>" />
                        </div>
                        <div><img u="image" src="<%= image_url 'welcome/portada2.jpg' %>" />
                        </div>
                     </div>
                      <sup>
                      <div class="intro-text" style="z-index: -1">
                        <div class="intro-heading">ARCA<sup style="font-size: 42%;vertical-align: super">&reg</sup> </div>
                        <div class="intro-lead-in">- Cultura visual de las américas coloniales -</div>
                        <a href="#services" class="page-scroll btn btn-xl">Archivos Visuales</a>
                      </div></sup>
                      <!-- bullet navigator container -->
                      <div u="navigator" class="jssorb21" style="position: absolute; bottom: 26px; left: 6px;">
                        <!-- bullet navigator item prototype -->
                        <div u="prototype" style="POSITION: absolute; WIDTH: 19px; HEIGHT: 19px; text-align:center; line-height:19px; color:White; font-size:12px;"></div>
                      </div>
                      <!-- Arrow Left -->
                      <span u="arrowleft" class="jssora21l" style="width: 55px; height: 55px; top: 123px; left: 8px;">
                      </span>
                      <!-- Arrow Right -->
                      <span u="arrowright" class="jssora21r" style="width: 55px; height: 55px; top: 123px; right: 8px">
                      </span>
                      <!-- Arrow Navigator Skin End -->
                      <!-- Trigger -->
                    </div>
                  </div>
                    <!-- Jssor Slider End -->

                  <!--<div class="container">-->
                    <!--<div class="intro-text">-->
                      <!--<div class="intro-heading">ARCA<sup style="font-size: 42%;vertical-align: super">&reg</sup> </div>-->
                      <!--<div class="intro-lead-in">- Cultura visual de las américas coloniales -</div>-->
                      <!--<a href="#services" class="page-scroll btn btn-xl">Archivos Visuales</a>-->
                    <!--</div>-->
                  <!--</div>-->
                </header>


                <section class="contenido">
                    <div class="container">
                      <%= bootstrap_flash %>
                      <%= yield %>
                    </div>
                </section>
            <%- else -%>
                <div id="wrapper">
                    <%= render 'application/bannerShrink' %>
                    <div class="page-wrapper">
                        <section class="contenido">
                            <div class="container">
                              <%= bootstrap_flash %>
                              <%= yield %>
                            </div>
                        </section>
                    </div>
                </div>
            <%- end -%>

    </body>

    <%= yield :js_application %>
    <%= render 'footer' %>
</html>