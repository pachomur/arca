<h1>Descriptores</h1>
<%= link_to 'New Description', new_description_path %>

<div id="description">
  <input class="search" placeholder="Buscar" />

  <button class="sort" data-sort="description">
    Ordenar por descriptor
  </button>
  <table  class="table table-bordered table-condensed table-hover">
      <thead>
        <tr>
          <th><%= sortable 'Descriptor' %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody class="list">
        <% @descriptions.each do |description| %>
          <tr>
            <td class="description"><%= description.description %></td>
            <td><%= link_to 'Show', description %></td>
            <td><%= link_to 'Edit', edit_description_path(description) %></td>
            <td><%= link_to 'Destroy', description, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
  </table>
  <br>
  <%= will_paginate @descriptions,  renderer: BootstrapPagination::Rails %>
</div>

<script>
    var options = {
        valueNames: ['description']
    };

    var userList = new List('description', options);
</script>
