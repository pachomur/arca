<!-- Page Heading -->
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header">Categorías</h1>
    </div>
  </div>


<!-- Page Content -->
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nivel</th>
      <th>Id</th>
      <th>Nombre</th>
      <th>Acciones</th>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.depth %></td>
        <td><%= category.id %></td>
        <td><%= category.name %></td>
        <td>
          <%= link_to 'Ver',
                      category_path(category), :class => 'btn btn-xs btn-default' %>
          <%= link_to 'Editar',
                      edit_category_path(category), :class => 'btn btn-xs btn-primary' %>
          <%= link_to 'Eliminar',
                      category_path(category),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '¿Estás seguro?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
