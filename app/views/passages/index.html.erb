<h1>Listing passages</h1>
<%= link_to 'New Passage', new_passage_path %>

<div id="passage">
  <input class="search" placeholder="Buscar" />

  <button class="sort" data-sort="nombre">
    Ordenar por Nombre
  </button>

  <table  class="table table-bordered table-condensed table-hover">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Pasaje</th>
      <th>Tipo de historia</th>
      <th>Fuente</th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <tbody class="list">
        <% @passages.each do |passage| %>
          <tr>
            <td class="nombre"><%= passage.name %></td>
            <td class="nombre"><%= passage.text %></td>
            <td class="nombre"><%= passage.history_type %></td>
            <td class="nombre"><%= passage.source %></td>
            <td><%= link_to 'Show', passage %></td>
            <td><%= link_to 'Edit', edit_passage_path(passage) %></td>
            <td><%= link_to 'Destroy', passage, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>
  <br>
  <%= will_paginate @passages,  renderer: BootstrapPagination::Rails %>
</div>

<script>
    var options = {
        valueNames: ['nombre']
    };

    var userList = new List('passage', options);
</script>