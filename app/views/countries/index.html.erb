<h1>Listing countries</h1>
<%= link_to 'New Country', new_country_path %>

<div id="country">
  <input class="search" placeholder="Buscar" />

  <button class="sort" data-sort="nombre">
    Ordenar por Nombre
  </button>

  <table  class="table table-bordered table-condensed table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody class="list">
        <% @countries.each do |country| %>
          <tr>
            <td class="nombre"><%= country.name %></td>
            <td><%= link_to 'Show', country %></td>
            <td><%= link_to 'Edit', edit_country_path(country) %></td>
            <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>
  <script>
      var options = {
          valueNames: ['nombre']
      };

      var userList = new List('country', options);
  </script>