<%- model_class = Artwork -%>

<!-- Page Heading -->
<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Obras
      <!-- < %=t '.title', :default => model_class.model_name.human.pluralize.titleize %>-->
      <!-- <small>Categoria: < %= Category.find(params[:parent_id]).name %></small>-->
    </h1>
  </div>
</div>

<!-- Blog Categories Well -->
<div class="col-md-4">

    <div class="well">
        <h4>Artistas</h4>
        <div class="row">
            <div class="col-lg-6">
              <ul class="list-unstyled">
                <% @authors.each  do |author| %>
                    <li>
                      <%=	link_to  "#{author.name}" ,artworks_path(:params => params.merge(:autor => author.name))  %>
                    </li>
                <% end %>
                </li>
              </ul>
            </div>
        <!-- /.col-lg-6 -->
        </div>
    <!-- /.row -->
    </div>

    <div class="well">
        <h4>Clasificaci√≥n</h4>
        <div class="row">
          <div class="col-lg-6">
            <ul class="list-unstyled">
              <% @clasifications.each  do |objeto| %>
                  <li>
                    <a href="#"><%= objeto.name %></a>
                  </li>
              <% end %>
              </li>
            </ul>
          </div>
          <!-- /.col-lg-6 -->
        </div>
    <!-- /.row -->
    </div>

    <div class="well">
    <h4>Lugares</h4>
    <div class="row">
      <div class="col-lg-6">
        <ul class="list-unstyled">
          <% @places.values.each  do |objeto| %>
              <li>
                <a href="#"></a>
              </li>
          <% end %>
          </li>
        </ul>
      </div>
      <!-- /.col-lg-6 -->
    </div>
    <!-- /.row -->
    </div>
</div>
<!-- Page Content -->
<div class="col-md-8 well">
    <div class="container-fluid">
    <div class="row">

      <% i = 0 %>
      <% @artworks.each  do |artwork| %>
          <% if i == 0 then %>
              <div class="row">
          <% end %>
          <!-- manejo de celular col-sm-4 col-xs-4 -->
          <div class="col-md-3  portfolio-item">
            <a href="<%= artwork_path(artwork) %>">
              <div>
                <%= image_tag artwork.avatar.url(:thumb) %>
              </div>
            </a>
            <h4>
              <a href="<%= artwork_path(artwork) %>"><%= artwork.title %></a>
            </h4>
            <p><%= artwork.author.name %></p>
          </div>

          <% i += 1 %>
          <% if i == 4 then %>
              <% i = 0 %>
              </div>
          <% end %>

      <% end %>

    </div>
<div class="text-center">
<%= will_paginate @artworks,  renderer: BootstrapPagination::Rails %>
</div>
</div>
</div>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_artwork_path(:parent_id =>params[:parent_id]),
            :class => 'btn btn-primary' %>


<% content_for :css_application do %>
    <%= stylesheet_link_tag "artworks" %>
<% end %>