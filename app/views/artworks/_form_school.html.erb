<div class="control-group">
  <%= ff.fields_for :school do |school_fields| %>
      <%= school_fields.label :name, "school" , :class => 'control-label' %>
      <div class="controls">
        <%= school_fields.text_area :name %>
        <% if params[:action] == "edit" %>

            <%= school_fields.check_box :_destroy %>
            <%= school_fields.label :_destroy , "Eliminar school"%>

        <% end %>
      </div>
  <% end %>
  <%= error_span(@artwork[:school]) %>
</div>