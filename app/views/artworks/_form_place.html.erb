<div class="control-group">
  <%= f.label :place, :class => 'control-label' %> <small> <%= link_to "Crear lugar", new_place_url%></small>
  <div class="controls">
    <%= f.collection_select :place_id, Place.all, :id, :name,  {:prompt => 'Seleccione el lugar'} %>
    <% if params[:action] == "edit" %>
        <br>
        <%= check_box_tag  "delete_place", true %>
        <%= f.label :_destroy , "Eliminar place"%>
  <% end %>
  </div>
  <%= error_span(@artwork[:comment]) %>
</div>
