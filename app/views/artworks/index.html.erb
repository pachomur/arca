<%- model_class = Artwork -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:author) %></th>
      <th><%= model_class.human_attribute_name(:activity) %></th>
      <th><%= model_class.human_attribute_name(:biographic_data) %></th>
      <th><%= model_class.human_attribute_name(:signed) %></th>
      <th><%= model_class.human_attribute_name(:synthesis) %></th>
      <th><%= model_class.human_attribute_name(:biographic_comment) %></th>
      <th><%= model_class.human_attribute_name(:annotation) %></th>
      <th><%= model_class.human_attribute_name(:avatar) %></th>
      <th><%= model_class.human_attribute_name(:sub_image) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @artworks.each do |artwork| %>
      <tr>
        <td><%= link_to artwork.id, artwork_path(artwork) %></td>
        <td><%= artwork.author %></td>
        <td><%= artwork.activity %></td>
        <td><%= artwork.biographic_data %></td>
        <td><%= artwork.signed %></td>
        <td><%= artwork.synthesis %></td>
        <td><%= artwork.biographic_comment %></td>
        <td><%= artwork.annotation %></td>
        <td> <%= image_tag artwork.avatar.url(:thumb) %></td>
        <td><%= artwork.sub_image %></td>
        <td><%= artwork.comment %></td>
        <td><%=l artwork.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_artwork_path(artwork), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      artwork_path(artwork),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_artwork_path,
            :class => 'btn btn-primary' %>
