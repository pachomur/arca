<%- model_class = Artwork -%>
<!-- Page Heading -->
<div class="page-header">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="page-header"><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %>
        <small>Secondary Text</small>
      </h1>
    </div>
  </div>
</div>


<!-- Page Content -->
<div class="container">

  <% i = 0 %>
  <% @artworks.each  do |artwork| %>
        <% if i == 0 then %>
            <div class="row">
        <% end %>
              <div class="col-md-3 portfolio-item">
                <a href="<%= artwork_path(artwork) %>">
                  <%= image_tag artwork.avatar.url(:thumb) %>
                </a>
                <h4>
                  <a href="#"><%= artwork.author %></a>
                </h4>
                <p><%= artwork.biographic_data %></p>
              </div>

        <% if i == 3 then %>
          <% i = 0 %>
          </div>
        <% end %>
        <% i += 1 %>

  <% end %>





</div>
