        <div class="panel panel-default" style="margin-top: 0px">
          <div class="panel-heading" role="tab" id="headingThree">
            <h4 class="panel-title">
              <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                <%= link_to '&#8226 Regiones'.html_safe, artworks_path+"?region=true" %>
              </a>
            </h4>
          </div>
        </div>

        <div class="panel panel-default" style="margin-top: 0px">
          <div class="panel-heading" role="tab" id="headingTwo">
            <h4 class="panel-title">
              <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                <%= link_to  '&#8226 Obras'.html_safe, artworks_path+"?authors=true" %>
              </a>
            </h4>
          </div>
        </div>


      </div>
    </div>

    <div class="col-md-8">
      <div class="container-fluid">
        <div class="row">

          <% i = 0 %>
          <% @authors.each  do |author| %>
              <% if i == 0 then %>
                  <div class="row">
              <% end %>
              <div class="col-sm-3  portfolio-item">
                <div class="row" style="padding: 0px 2px">
                  <div class="">



                    <div class="thumbnail artwork-thumbnail">
                        <% if author.avatar.exists?%>
                            <div id="img-wrap" style="background-image: url('<%= author.avatar.url(:medium) %>');"></div>
                        <% else %>
                            <%= image_tag author.avatar.url(:thumb) , :width => 150, :height => 150 %>
                        <% end %>
                      <div class="caption">
                        <span class="ellipsis"><a href="<%= artworks_path(:author_show => author.id) %>"> <%= author.get_full_name %> </a></span>
                        <span class="ellipsis"><a class="link-unstyled" href="<%= artworks_path(:author_show => author.id) %>">
                                <span class="ellipsis">
                                    <% obj_nombres = link_authors_artworks(author.artworks)%>
                                    <% if not obj_nombres.nil? %>

                                        <% inombres = 3 %>
                                        <% j = 1 %>
                                        <% obj_nombres.each  do |nombre| %>
                                            <%= nombre %>
                                            <br>

                                            <% j = j + 1 %>
                                        <% end %>
                                        <%='ver mas'%>
                                    <% end %>
                                </span>
                            </a>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>

              <% i += 1 %>
              <% if i == 4 then %>
                  <% i = 0 %>
                  </div>
              <% end %>

          <% end %>
        </div>

        <div class="text-center">

          <%= will_paginate @authors,  renderer: BootstrapPagination::Rails %>
        </div>
      </div>
    </div>

  </div>
</div>

<% content_for :css_application do %>
    <%= stylesheet_link_tag "artworks" %>
<% end %>
